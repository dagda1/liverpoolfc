{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/esm",
    "rootDir": "src",
    "paths": {
      "~/*": ["src/*"]
    },
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx"
  ],
  "exclude": ["vite.config.mts", "dist", "node_modules"]
}
